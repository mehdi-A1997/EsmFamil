<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    tools:context=".activity.UserResultActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userresult_sec"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dialog_bg"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/userresult_win"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:fontFamily="@font/ziba"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="برد:"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:fontFamily="@font/ziba"
                    android:textSize="28sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/userresult_draw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/ziba"
                    android:textSize="28sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="تساوی:"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/ziba"
                    android:textSize="28sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/userresult_lose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:fontFamily="@font/ziba"
                    android:textSize="28sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="باخت:"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:fontFamily="@font/ziba"
                    android:textSize="28sp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userresult_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/user_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/userresult_sec"
        app:layout_constraintBottom_toTopOf="@id/userresult_sec"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        android:transitionName="result_activity_transition"
        app:civ_border_color="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>